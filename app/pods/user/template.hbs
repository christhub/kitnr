<h2>User</h2>

<form class="ui form" {{action "save" on="submit"}}>
  <div class="field">
    <label>Name</label>
    {{input value=model.name}}
  </div>
  <div class="field">
    <label>Description</label>
    {{input value=model.description}}
  </div>
  <div class="field">
    <label>Email</label>
    {{input value=model.email}}
  </div>
  <div class="ui large buttons">
    <button class="ui button green">Save</button>
    <div class="or"></div>
    <button {{action "cancel"}} class="ui button red">Cancel</button>
  </div>
</form>
